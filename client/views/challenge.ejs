<!DOCTYPE html>
<html>
<head>
<title>ezquiz.com</title>
<meta name="description" content="Teste tip quiz din diferite domenii">
<link rel="stylesheet" type="text/css" href="quiz.css">
<link rel="stylesheet" type="text/css" href="challenge.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script type="text/javascript" src="quiz.js"></script>
<script type="text/javascript" src="gameLogic.js"></script>
</head>
<body onload="onChallenge(); user();">
<div id="header"><h1>ezquiz.com</h1></div>
<div id="navbar"> 
		<div id="menu">
			<a href="/quiz">Quizes</a>
			<a href="/challenge">Challenge</a>
			<a href="/top" onclick="topPlayers()">Top players</a>
			<a href="/info">Info</a>
			<% if(user !== undefined && user.admin === 1) { %>
			<a href="/modify">Adauga/Modifica</a>
			<% } %>
		</div>
		<div id="profileLog">	
            <% if(user !== undefined){ %>
                <a href="/profile" class="user"><%= user.username %></a>
                <a href="/logout" >Logout</a>
            <% } else { %>
                <a href="/signup">Sign Up</a>
                <a href="/login">Log in</a>
            <% }%>
		</div>	
</div>
<div id="main1">
<div id="timerWrap">
<div id="timer"></div>
</div>
<div id="questProgressBar" style="color:white; height: 0px;"></div>
<div id="life"></div>
<div id="gameDiv">
<div id="startGame" style="display: block">
<button onclick="startGame(); timer();"> Start challenge! </button>
</div>
<div id="endGame" style="display: 'none';"><div id="final"></div></div>
<div id="question"></div>
<ul id="answers">
		<li></li>
		<li></li>
		<li></li>
		<li></li>
</ul>
</div>
<p id="chosen"></p>
</div>
<div id="footer"></div>
</body>
</html>